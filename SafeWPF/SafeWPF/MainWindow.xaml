<Window x:Class="SafeWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SafeWPF"
        mc:Ignorable="d"
        Title="Сейф братьев пилотов" Height="150" Width="280">
    <Grid>
        <Button x:Name="startButton" Content="Начать игру" HorizontalAlignment="Left" Height="30" Margin="73,61,0,0" VerticalAlignment="Top" Width="120" Click="startButton_Click"/>
        <TextBox x:Name="size" HorizontalAlignment="Left" Height="25" Margin="125,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="116" MaxLength="2" PreviewTextInput="size_PreviewTextInput" />
        <Label x:Name="label" Content="Размерность поля" HorizontalAlignment="Left" Height="25" Margin="15,20,0,0" VerticalAlignment="Top" Width="110"/>
        <WrapPanel x:Name="gameField" HorizontalAlignment="Left"  Margin="246,33,0,0" VerticalAlignment="Top" Width="121"/>

    </Grid>
</Window>
